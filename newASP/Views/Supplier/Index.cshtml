@model IEnumerable<newASP.Models.Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Layout.cshtml"; // mengambil layout
}

<h4 class="card-title">Data Supplier </h4>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Create">
        <i class="mdi mdi-plus"></i>
        Create
    </a>
</p>
<table id="myTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Edit">
                        <i class="mdi mdi-pencil"></i>

                    </a> |
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Details">
                        <i class="mdi mdi-information-variant"></i>

                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                        <i class="mdi mdi-delete"></i>

                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
